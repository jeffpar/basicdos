              "label": "6",
              "value": 0
            },
            {
              "id": "sw1-7",
              "title": "Number of Floppy Drives",
              "label": "7",
              "value": 0
            },
            {
              "id": "sw1-8",
              "title": "Number of Floppy Drives",
              "label": "8",
              "value": 1
            }
          ]
        },
        {
          "id": "sw2",
          "type": "switches",
          "title": "SW2",
          "style": {
            "position": "relative",
            "left": "0px",
            "clear": "both"
          },
          "switches": [
            {
              "id": "sw2-1",
              "title": "Expansion Memory (32K Increments)",
              "label": "1",
              "value": 1
            },
            {
              "id": "sw2-2",
              "title": "Expansion Memory (32K Increments)",
              "label": "2",
              "value": 1
            },
            {
              "id": "sw2-3",
              "title": "Expansion Memory (32K Increments)",
              "label": "3",
              "value": 1
            },
            {
              "id": "sw2-4",
              "title": "Expansion Memory (32K Increments)",
              "label": "4",
              "value": 1
            },
            {
              "id": "sw2-5",
              "title": "Expansion Memory (32K Increments)",
              "label": "5",
              "value": 1
            },
            {
              "id": "sw2-6",
