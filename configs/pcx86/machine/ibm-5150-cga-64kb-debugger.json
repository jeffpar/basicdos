{
  "name": "IBM PC, 64Kb RAM, Dual Floppy Drives, CGA, Debugger",
  "defaults": {
    "ram": "64K",
    "fpu": "None",
    "fdc": "2 diskette drives",
    "parallel": "LPT1",
    "serial": "COM1"
  },
  "machine": {
    "type": "pcx86",
    "name": "PCx86",
    "version": "2.06",
    "factory": "embedPCx86",
    "script": "/software/pcx86/releases/pcx86-uncompiled.js"
  },
  "components": [
    {
      "id": "pcCGA",
      "class": "computer"
    },
    {
      "id": "debugger",
      "class": "debugger"
    },
    {
      "id": "romBASIC",
      "class": "rom",
      "addr": "0xf6000",
      "size": "0x08000",
      "alias": null,
      "file": "/software/pcx86/roms/BASIC100.json"
    },
    {
      "id": "romBIOS",
      "class": "rom",
      "addr": "0xfe000",
      "size": "0x02000",
      "file": "/software/pcx86/roms/PCBIOS-REV1.json"
    },
    {
      "id": "videoCGA",
      "class": "video",
      "title": "Color Display",
      "screenWidth": 1280,
      "screenHeight": 800,
      "screenColor": "black",
      "charCols": 80,
      "charRows": 25,
      "fontROM": "/software/pcx86/roms/IBM-CGA.json",
      "flicker": 0,
      "overlay": true,
      "autoLock": true,
      "touchScreen": "mouse",
      "controls": [
        {
          "type": "group",
          "style": {
            "float": "right"
          }
        },
        {
          "id": "fullScreen",
          "type": "button",
          "label": "Full Screen",
          "style": {
            "padding-left": "8px",
            "line-height": "1em"
          }
        }
      ]
    },
    "/configs/pcx86/machine/fdc.json",
    "/configs/pcx86/machine/ram-5150.json",
    {
      "id": "cpu8088",
      "class": "cpu",
      "model": 8088,
      "autoStart": true,
      "controls": [
        {
          "id": "reset",
          "type": "button",
          "label": "Reset",
          "style": {
            "padding-right": "8px"
          }
        }
      ]
    },
    "/configs/pcx86/machine/keys.json",
    {
      "id": "panel",
      "class": "panel",
      "title": "PCjs Debugger",
      "style": {
        "width": "auto",
        "max-width": "100%",
        "padding-top": "8px"
      },
      "controls": [
        {
          "type": "group",
          "class": "pcjs-panel"
        },
        {
          "id": "print",
          "type": "textarea",
          "height": "260px",
          "style": {
            "width": "100%"
          }
        },
        {
          "id": "debugInput",
          "type": "text",
          "style": {
            "clear": "both"
          }
        },
        {
          "id": "debugEnter",
          "type": "button",
          "label": "Enter"
        },
        {
          "id": "clear",
          "type": "button",
          "label": "Clear"
        },
        {
          "id": "run",
          "type": "button",
          "label": "Run",
          "style": {
            "padding-left": "8px"
          }
        },
        {
          "id": "step",
          "type": "button",
          "label": "Step"
        },
        {
          "id": "setSpeed",
          "type": "button",
          "label": "4.77Mhz"
        },
        {
          "type": "description",
          "label": "Speed:",
          "style": {
            "padding-bottom": "8px",
            "padding-left": "8px"
          }
        },
        {
          "id": "speed",
          "type": "description",
          "label": "Stopped",
          "style": {
            "padding-left": "4px"
          }
        },
        {
          "type": "group",
          "style": {
            "padding-left": "8px",
            "width": "280px"
          }
        },
        {
          "id": "AX",
          "type": "register"
        },
        {
          "id": "BX",
          "type": "register"
        },
        {
          "id": "CX",
          "type": "register"
        },
        {
          "id": "DX",
          "type": "register"
        },
        {
          "id": "SP",
          "type": "register"
        },
        {
          "id": "BP",
          "type": "register"
        },
        {
          "id": "SI",
          "type": "register"
        },
        {
          "id": "DI",
          "type": "register"
        },
        {
          "id": "DS",
          "type": "register"
        },
        {
          "id": "ES",
          "type": "register"
        },
        {
          "id": "SS",
          "type": "register"
        },
        {
          "id": "CS",
          "type": "register"
        },
        {
          "id": "IP",
          "type": "register"
        },
        {
          "id": "V",
          "type": "flag"
        },
        {
          "id": "D",
          "type": "flag"
        },
        {
          "id": "I",
          "type": "flag"
        },
        {
          "id": "T",
          "type": "flag"
        },
        {
          "id": "S",
          "type": "flag"
        },
        {
          "id": "Z",
          "type": "flag"
        },
        {
          "id": "A",
          "type": "flag"
        },
        {
          "id": "P",
          "type": "flag"
        },
        {
          "id": "C",
          "type": "flag"
        }
      ]
    },
    {
      "id": "chipset",
      "class": "chipset",
      "model": 5150,
      "scaleTimers": false,
      "sw1": "01001001",
      "sw2": "11111000",
      "@note": "The above switch settings indicate '64K, No FPU, Color Monitor, 2 Floppy Drives'; see 'swdesc' below.",
      "sound": true,
      "floppies": "",
      "monitor": "",
      "dateRTC": "",
      "style": {
        "float": "left",
        "padding-bottom": "8px",
        "padding-left": "8px"
      },
      "controls": [
        {
          "id": "sw1",
          "type": "switches",
          "title": "SW1",
          "style": {
            "position": "relative",
            "left": "0px"
          },
          "switches": [
            {
              "id": "sw1-1",
              "title": "Reserved",
              "label": "1",
              "value": 0
            },
            {
              "id": "sw1-2",
              "title": "FPU",
              "label": "2",
              "value": 1
            },
            {
              "id": "sw1-3",
              "title": "Base Memory (16K Increments)",
              "label": "3",
              "value": 0
            },
            {
              "id": "sw1-4",
              "title": "Base Memory (16K Increments)",
              "label": "4",
              "value": 0
            },
            {
              "id": "sw1-5",
