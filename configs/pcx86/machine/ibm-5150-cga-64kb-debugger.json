              "label": "6",
              "value": 0
            },
            {
              "id": "sw2-7",
              "title": "Reserved",
              "label": "7",
              "value": 0
            },
            {
              "id": "sw2-8",
              "title": "Reserved",
              "label": "8",
              "value": 0
            }
          ]
        },
        {
          "id": "swdesc",
          "type": "description",
          "label": "64K, No FPU, Color Monitor, 2 Floppy Drives",
          "style": {
            "position": "relative",
            "left": "0px",
            "clear": "both"
          }
        }
      ]
    },
    {
      "id": "lpt1",
      "class": "parallel",
      "adapter": 2,
      "binding": "print"
    },
    {
      "id": "com1",
      "class": "serial",
      "adapter": 1,
      "binding": "print"
    }
  ]
}
